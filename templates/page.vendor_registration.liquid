{% comment %} <style>
* {
    box-sizing: border-box;
  }
  
  .honeypot-fields {
    display: none;
  }
  
  .vendor-registration {
    font-family: 'Arial', sans-serif;
    padding: 40px 20px;
    width: 100%;
    min-height: 90vh;
  }
  
  .page-width {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 0;
  }

.vendor-registration .grid {
  display: flex;
  justify-content: center;
  width: 100%;
}

.vendor-registration .section-header {
  text-align: center;
  margin-bottom: 30px;
}

.vendor-registration .section-header h1 {
  color: #3e0404;
  font-size: 2.5rem;
  margin-bottom: 15px;
  font-weight: 700;
}

.vendor-registration .section-header p {
  color: #3e0404;
  font-size: 1rem;
}

.vendor-registration .grid.grid--half-gutters {
  display: flex;
  gap: 20px;
}

.vendor-registration .grid__item {
  width: 100%;
}

.vendor-registration input[type="text"],
.vendor-registration input[type="email"],
.vendor-registration input[type="number"],
.vendor-registration select,
.vendor-registration input[type="file"] {
  width: 100%;
  padding: 10px 12px;
  border-radius: 6px;
  border: 1px solid #dfe3e8;
  outline: none;
  box-sizing: border-box;
}

.vendor-registration .phone-number-input {
  display: flex;
  gap: 10px;
}

.vendor-registration .phone-number-input select {
  width: 30%;
}

.vendor-registration .terms-label {
  font-size: 0.95rem;
  color: #3e0404;
  display: flex;
  align-items: center;
  gap: 5px;
}

.vendor-registration .terms-label a {
  color: #3e0404;
  text-decoration: underline;
}

.btn {
  background-color: #3e0404;
  color: #fff;
  padding: 15px 30px;
  border-radius: 6px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  margin-top: 20px;
  transition: all 0.3s ease;
  width: 100%;
  font-size: 1.1rem;
}

.btn:hover {
  background-color: #5a0606;
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(62, 4, 4, 0.3);
}

.contact-form > div:last-child {
  margin-top: 25px;
  text-align: center;
}

.contact-form > div:last-child a {
  color: #3e0404;
  text-decoration: underline;
  font-size: 1rem;
}

.contact-form > div:last-child a:hover,
.contact-form > div:last-child a:focus {
  color: #5a0606;
}

/* Textarea specific styling */
textarea {
  min-height: 100px;
  resize: vertical;
}


/* Mobile responsiveness */
@media screen and (max-width: 1024px) {
  .vendor-registration {
    padding: 30px 15px;
  }
  
  .vendor-registration .grid__item.medium-up--five-sixths {
    padding: 40px 30px;
  }
}

@media screen and (max-width: 768px) {
  .vendor-registration {
    padding: 20px 15px;
  }
  
  .vendor-registration .grid__item.medium-up--five-sixths {
    padding: 30px 20px;
  }
  
  .grid.grid--half-gutters {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .phone-number-input {
    flex-direction: column;
    align-items: stretch;
  }
  
  .phone-number-input select {
    flex: none;
  }
  
  .section-header h1 {
    font-size: 2rem;
  }
}
  
  @media screen and (max-width: 480px) {
    .vendor-registration {
      padding: 15px 10px;
    }
    
    .vendor-registration .grid__item.medium-up--five-sixths {
      padding: 20px 15px;
    }
    
    input[type="text"],
    input[type="email"],
    input[type="number"],
    select,
    input[type="file"],
    textarea {
      padding: 10px 12px;
    }
    
    .section-header h1 {
      font-size: 1.8rem;
    }
  }
</style> {% endcomment %}
