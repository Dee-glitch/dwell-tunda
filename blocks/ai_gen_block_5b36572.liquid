{% doc %}
  @prompt
    two cards with text next to eachother

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-cards-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-text-card-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-card-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin:0 0 {{ block.settings.heading_margin }}px 0;
  }

  .ai-text-card-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-cards-container-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.columns_mobile == '1' %}column{% else %}row{% endif %};
    }
  }
{% endstyle %}

<div class="ai-text-cards-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}><div class="ai-text-card-{{ ai_gen_id }}">
    {% if block.settings.card_1_heading != blank %}
      <h3 class="ai-text-card-heading-{{ ai_gen_id }}">{{ block.settings.card_1_heading }}</h3>
    {% endif %}
    {% if block.settings.card_1_text != blank %}
      <div class="ai-text-card-content-{{ ai_gen_id }}">{{ block.settings.card_1_text }}</div>
    {% endif %}
  </div><div class="ai-text-card-{{ ai_gen_id }}">
    {% if block.settings.card_2_heading != blank %}
      <h3 class="ai-text-card-heading-{{ ai_gen_id }}">{{ block.settings.card_2_heading }}</h3>
    {% endif %}
    {% if block.settings.card_2_text != blank %}
      <div class="ai-text-card-content-{{ ai_gen_id }}">{{ block.settings.card_2_text }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Text cards",
  "settings": [
    {
      "type": "header",
      "content": "Card 1"
    },
    {
      "type": "text",
      "id": "card_1_heading",
      "label": "Heading",
      "default": "Card 1 Title"
    },
    {
      "type": "textarea",
      "id": "card_1_text",
      "label": "Text",
      "default": "Add your content for the first card here. This text will appear alongside the second card."
    },
    {
      "type": "header",
      "content": "Card 2"
    },
    {
      "type": "text",
      "id": "card_2_heading",
      "label": "Heading",
      "default": "Card 2 Title"
    },
    {
      "type": "textarea",
      "id": "card_2_text",
      "label": "Text",
      "default": "Add your content for the second card here. This text will appear alongside the first card."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Gap between cards",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Card padding",
      "default": 30
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#e6e6e6"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 1
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 20
    },
    {
      "type": "range",
      "id": "heading_margin",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Heading bottom margin",
      "default": 12
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    }
  ],
  "presets": [
    {
      "name": "Text cards"
    }
  ]
}
{% endschema %}